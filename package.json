{
  "name": "ruby",
  "displayName": "Ruby",
  "description": "An auto-configured set of extensions for working with Ruby",
  "license": "MIT",
  "publisher": "Shopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/vscode-shopify-ruby"
  },
  "version": "0.0.1-alpha",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Extension Packs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionPack": [
    "rebornix.ruby",
    "Shopify.rubocop-lsp",
    "Shopify.vscode-shadowenv"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ruby.force_apply_defaults",
        "title": "Ruby: Force apply defaults"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "format": "eslint '**/*.ts' --fix && prettier '**/*.{json,md,yaml,yml}' --write",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "lint": "eslint '**/*.ts' && prettier '**/*.{json,md,yaml,yml}' --check",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --out vscode-shopify-ruby.vsix",
    "vscode:prepublish": "yarn run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@shopify/eslint-plugin": "^41.2.0",
    "@shopify/prettier-config": "^1.1.2",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.28",
    "eslint": "^8.12.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "glob": "^7.1.7",
    "mocha": "^9.2.2",
    "prettier": "^2.6.1",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0"
  }
}
