{
  "name": "ruby-extensions-pack",
  "displayName": "Ruby",
  "description": "An opinionated and auto-configured set of extensions for Ruby development",
  "license": "MIT",
  "publisher": "Shopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/vscode-shopify-ruby"
  },
  "icon": "icon.png",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Extension Packs",
    "Themes",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionPack": [
    "Shopify.vscode-shadowenv",
    "sorbet.sorbet-vscode-extension",
    "koichisasada.vscode-rdbg",
    "Shopify.ruby-lsp"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rubyExtensionsPack.forceApplyDefaults",
        "title": "Ruby extensions pack: Force apply defaults"
      },
      {
        "command": "rubyExtensionsPack.clearState",
        "title": "Ruby extensions pack: Clear cache and recommended settings"
      }
    ],
    "themes": [
      {
        "label": "Spinel",
        "uiTheme": "vs-dark",
        "path": "./themes/dark_spinel.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "format": "eslint '**/*.ts' --fix && prettier '**/*.{json,md,yaml,yml}' --write",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "lint": "eslint '**/*.ts' && prettier '**/*.{json,md,yaml,yml}' --check",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --out vscode-shopify-ruby.vsix",
    "vscode:prepublish": "yarn run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node"
  },
  "resolutions": {
    "node-fetch": ">= 2.6.7",
    "cross-fetch": ">= 3.1.5",
    "ws": ">= 7.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@shopify/eslint-plugin": "^42.0.3",
    "@shopify/prettier-config": "^1.1.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.11",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "glob": "^9.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vsce": "^2.15.0"
  }
}
